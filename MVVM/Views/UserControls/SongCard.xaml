<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.UserControls.SongCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.UserControls"
             xmlns:SongVM="clr-namespace:_4kTiles_Frontend.MVVM.ViewsModel.Library.Public"
             mc:Ignorable="d">
  <UserControl.DataContext>
    <SongVM:SongOverviewViewModel />
  </UserControl.DataContext>
  <Grid Width="440"
        Height="70">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="188" />
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0">
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="#4A4E69"
              CornerRadius="10,0,0,10">
        <StackPanel>
          <TextBlock Text="{Binding SongOverview.SongName}"
                     FontSize="24"
                     Width="230"
                     Height="33"
                     Margin="0,5,0,0"
                     Foreground="White" />
          <TextBlock Text="{Binding SongOverview.Author}"
                     FontSize="14"
                     Width="230"
                     Height="20"
                     Margin="0,3,0,0"
                     Foreground="White" />
        </StackPanel>
      </Border>
    </Grid>
    <Grid Grid.Column="1">
      <StackPanel Width="188"
                  HorizontalAlignment="Right"
                  Orientation="Horizontal">
        <Button x:Name="infoBtn"
                Style="{StaticResource songInfoButton}"
                HorizontalAlignment="Left" />
        <Button x:Name="delBtn"
                Style="{StaticResource flagButton}" Click="delBtn_Click" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
