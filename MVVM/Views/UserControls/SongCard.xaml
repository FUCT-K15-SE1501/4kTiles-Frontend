<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.UserControls.SongCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.UserControls"
             mc:Ignorable="d">
  <!--<UserControl.Resources>
    <BitmapImage x:Key="Flag"
                 UriSource="pack://application:,,,/Assets/PNG/Flag.png"/>
  </UserControl.Resources>-->
  <Grid Width="462"
        Height="70">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="188" />
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0">
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="#4A4E69"
              CornerRadius="10,0,0,10">
        <StackPanel>
          <TextBlock Text="Song's name"
                     FontSize="24"
                     Width="230"
                     Height="33"
                     Margin="0,5,0,0"
                     Foreground="White" />
          <TextBlock Text="Author"
                     FontSize="14"
                     Width="230"
                     Height="20"
                     Margin="0,3,0,0"
                     Foreground="White" />
        </StackPanel>
      </Border>
    </Grid>
    <Grid Grid.Column="1">
      <StackPanel Width="188"
                  HorizontalAlignment="Right"
                  Orientation="Horizontal">
        <Button x:Name="infoBtn"
                Style="{StaticResource songInfoButton}"
                HorizontalAlignment="Left" />
        <Button x:Name="delBtn"
                Style="{StaticResource flagButton}" />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
