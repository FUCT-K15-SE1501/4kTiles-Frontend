<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.UserControls.CustomComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="30"
             d:DesignWidth="460">
  <Grid>
    <ComboBox Text="---Selecte Genre---"
              ItemsSource="{Binding GenreList}"
              SelectedItem="{Binding SelectedGenre}"
              IsEditable="True"
              IsReadOnly="True"
              Focusable="False"
              FontSize="18"
              Style="{StaticResource theComboBox}"
              ItemContainerStyle="{StaticResource theComboBoxItem}"/>
  </Grid>
</UserControl>
