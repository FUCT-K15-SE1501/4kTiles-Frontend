<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.UserControls.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="35"
             d:DesignWidth="280">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="60" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Button Grid.Column="0" Style="{StaticResource BackwardButton}"/>
    <TextBlock Grid.Column="1"
               Text="1"
               Foreground="White"
               FontSize="18"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" />
    <Button Grid.Column="2" Style="{StaticResource ForwardButton}"/>
  </Grid>
</UserControl>
