<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.Library.Public.PublicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.Library.Public"
             xmlns:PublicVM="clr-namespace:_4kTiles_Frontend.MVVM.ViewsModel.Library.Public"
             xmlns:SongUC="clr-namespace:_4kTiles_Frontend.MVVM.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="440">
  <UserControl.DataContext>
    <PublicVM:PublicViewModel />
  </UserControl.DataContext>
  <UserControl.Resources>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Height="400"
                Orientation="Vertical"
                Name="SongsContainer">
      <ItemsControl ItemsSource="{Binding SongsList}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border BorderThickness="15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
              <Border BorderThickness="1"
                      BorderBrush="#22223B"
                      CornerRadius="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                <Grid Height="70">
                  <SongUC:SongCard />
                </Grid>
              </Border>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
      <TextBox Width="120"
               FontSize="30"
               Text="{Binding SearchText}"/>
      <Button Content="Search"
              FontSize="30"
              Margin="0,0,20,0"
              Command="{Binding SearchCommand}" />
      <Button Content="Prev"
              FontSize="30"
              Command="{Binding PrevCommand}" />
      <Label Content="{Binding SelectedIndex}"
             FontSize="30" />
      <Button Content="Next"
              FontSize="30"
              Command="{Binding NextCommand}" />
    </StackPanel>
  </Grid>
</UserControl>
