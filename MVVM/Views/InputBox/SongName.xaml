<UserControl x:Class="_4kTiles_Frontend.MVVM.Views.InputBox.SongName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_4kTiles_Frontend.MVVM.Views.InputBox"
             mc:Ignorable="d">
  <Grid>
    <TextBox x:Name="songName"
             Width="388"
             Height="50"
             Text="Input song name"
             Background="{x:Null}"
             Foreground="#FFC4C4C4"
             FontSize="30"
             BorderBrush="Transparent"
             VerticalContentAlignment="Center"
             HorizontalContentAlignment="Right"
             Margin="6,1,0,69"
             HorizontalAlignment="Left" />
    <Canvas Height="1"
            Width="388"
            Margin="6,51,0,68"
            HorizontalAlignment="Left">
      <Line X1="0"
            X2="388"
            Stroke="#FFC4C4C4" />
    </Canvas>
    <TextBlock Text="Selected Row: 4"
               Width="215"
               Height="30"
               Margin="175,56,0,34"
               Foreground="White"
               FontSize="18"
               TextAlignment="Right"
               HorizontalAlignment="Left" />
  </Grid>
</UserControl>
